<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style x:Key="ChromeIconBaseKey"
		   TargetType="{x:Type Path}">
		<Setter Property="Width"
				Value="8" />
		<Setter Property="Fill"
				Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContentControl}}, Path=Foreground}" />
		<Setter Property="Stretch"
				Value="Uniform" />
		<Setter Property="SnapsToDevicePixels"
				Value="True" />
	</Style>

	<Style x:Key="MinimizeIconKey"
		   TargetType="{x:Type Path}"
		   BasedOn="{StaticResource ChromeIconBaseKey}">
		<Setter Property="Width"
				Value="10" />
		<Setter Property="Height"
				Value="10" />
		<Setter Property="Data"
				Value="M 20 8 L 20 10 L 0 10 L 0 8 Z" />
	</Style>

	<Style x:Key="MaximizeIconKey"
		   TargetType="{x:Type Path}"
		   BasedOn="{StaticResource ChromeIconBaseKey}">
		<Setter Property="Width"
				Value="10" />
		<Setter Property="Height"
				Value="10" />
		<Setter Property="Data"
				Value="M 20 0 L 20 20 L 0 20 L 0 0 Z M 18 2 L 2 2 L 2 18 L 18 18 Z" />
	</Style>

	<Style x:Key="NormalizeIconKey"
		   TargetType="{x:Type Path}"
		   BasedOn="{StaticResource ChromeIconBaseKey}">
		<Setter Property="Width"
				Value="10" />
		<Setter Property="Height"
				Value="10" />
		<Setter Property="Data"
				Value="M 20 16 L 16 16 L 16 20 L 0 20 L 0 4 L 4 4 L 4 0 L 20 0 Z M 14 6 L 2 6 L 2 18 L 14 18 Z M 18 2 L 6 2 L 6 4 L 16 4 L 16 14 L 18 14 Z" />
	</Style>

	<Style x:Key="CloseIconKey"
		   TargetType="{x:Type Path}"
		   BasedOn="{StaticResource ChromeIconBaseKey}">
		<Setter Property="Width"
				Value="10" />
		<Setter Property="Height"
				Value="10" />
		<Setter Property="Data"
				Value="M 11.416016 10 L 20 18.583984 L 18.583984 20 L 10 11.416016 L 1.416016 20 L 0 18.583984 L 8.583984 10 L 0 1.416016 L 1.416016 0 L 10 8.583984 L 18.583984 0 L 20 1.416016 Z" />
	</Style>

</ResourceDictionary>
